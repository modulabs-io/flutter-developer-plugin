{
  "mcpServers": {
    "dart-flutter": {
      "command": "dart",
      "args": ["mcp-server"]
    },
    "pubdev": {
      "command": "npx",
      "args": ["-y", "@anthropic/pubdev-mcp-server"]
    },
    "flutter-community": {
      "command": "npx",
      "args": ["-y", "flutter-mcp"]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "--allow-write"
      ],
      "env": {
        "MCP_ALLOWED_PATHS": "${workspaceFolder}"
      }
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "${workspaceFolder}"
      ]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}"
      }
    },
    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase"],
      "env": {
        "SUPABASE_URL": "${env:SUPABASE_URL}",
        "SUPABASE_KEY": "${env:SUPABASE_KEY}"
      }
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${env:DATABASE_URL}"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite",
        "--db-path",
        "${workspaceFolder}/database.db"
      ]
    },
    "xcode-build": {
      "command": "npx",
      "args": ["-y", "xcodebuildmcp"]
    },
    "app-store-connect": {
      "command": "npx",
      "args": ["-y", "@joshuarileydev/app-store-connect-mcp-server"],
      "env": {
        "APP_STORE_CONNECT_KEY_ID": "${env:APP_STORE_CONNECT_KEY_ID}",
        "APP_STORE_CONNECT_ISSUER_ID": "${env:APP_STORE_CONNECT_ISSUER_ID}",
        "APP_STORE_CONNECT_PRIVATE_KEY": "${env:APP_STORE_CONNECT_PRIVATE_KEY}"
      }
    },
    "android-replicant": {
      "command": "npx",
      "args": ["-y", "@anthropic/replicant-mcp"],
      "env": {
        "ANDROID_HOME": "${env:ANDROID_HOME}"
      }
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp"]
    }
  }
}
