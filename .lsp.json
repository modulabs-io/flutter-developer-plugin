{
  "dart": {
    "command": "dart",
    "args": ["language-server", "--client-id", "claude-code.flutter-developer"],
    "extensionToLanguage": {
      ".dart": "dart"
    }
  },
  "swift": {
    "command": "sourcekit-lsp",
    "extensionToLanguage": {
      ".swift": "swift"
    }
  },
  "kotlin": {
    "command": "kotlin-lsp",
    "extensionToLanguage": {
      ".kt": "kotlin",
      ".kts": "kotlin"
    }
  },
  "java": {
    "command": "jdtls",
    "extensionToLanguage": {
      ".java": "java"
    }
  },
  "clangd": {
    "command": "clangd",
    "args": ["--background-index"],
    "extensionToLanguage": {
      ".c": "c",
      ".h": "c",
      ".cpp": "cpp",
      ".hpp": "cpp",
      ".cc": "cpp",
      ".cxx": "cpp",
      ".m": "objective-c",
      ".mm": "objective-cpp"
    }
  },
  "rust": {
    "command": "rust-analyzer",
    "extensionToLanguage": {
      ".rs": "rust"
    }
  },
  "yaml": {
    "command": "yaml-language-server",
    "args": ["--stdio"],
    "extensionToLanguage": {
      ".yaml": "yaml",
      ".yml": "yaml"
    }
  }
}
